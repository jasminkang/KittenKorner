<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<% @categories.each do |cat| %>
  <%= link_to cat.name.capitalize, listings_path(:category => cat) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Sold</th>
      <th>User</th>
      <th>Category</th>
      <th>Image</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <% if listing.sold == false %> <tr>
        <td><%= listing.title%></td>
        <td><%= listing.description %></td>
        <td><%= listing.condition %></td>
        <td><%= listing.price %></td>
        <td><%= listing.sold %></td>
        <td><%= listing.user.username%></td>
        <td><%= listing.category.name %></td>
        <td><%= image_tag listing.picture if listing.picture.attached? %></td>
        <td><%= link_to 'Show', listing %></td>
        

    <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>


